<?xml version="1.0" encoding="UTF-8"?>
<profiles version="12">
  <profile kind="CodeFormatterProfile" name="CustomLongLineFormatter" version="12">
    <!-- Allow long lines generally (we only want list initializers/arg lists split) -->
    <setting id="org.eclipse.jdt.core.formatter.lineSplit" value="300"/>

    <!-- Keep default behaviour for other settings. Add additional overrides here if desired. -->
    <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="space"/>
    <setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="4"/>
    <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="4"/>

    <!-- Wrap arguments and array initializers always; alignment value 48 (= 16 + 32) includes NEXT_SHIFTED + NEXT_PER_LINE for one item per line -->
    <setting id="org.eclipse.jdt.core.formatter.wrap_arguments_in_method_invocation" value="wrap_always"/>
    <setting id="org.eclipse.jdt.core.formatter.alignment_for_arguments_in_method_invocation" value="48"/>
    <setting id="org.eclipse.jdt.core.formatter.wrap_arguments_in_allocation_expression" value="wrap_always"/>
    <setting id="org.eclipse.jdt.core.formatter.alignment_for_arguments_in_allocation_expression" value="48"/>
    <setting id="org.eclipse.jdt.core.formatter.wrap_array_initializers" value="wrap_always"/>
    <setting id="org.eclipse.jdt.core.formatter.alignment_for_array_initializer" value="48"/>
    <!-- Prevent formatter from rejoining already wrapped lines -->
    <setting id="org.eclipse.jdt.core.formatter.join_wrapped_lines" value="false"/>
    
    <!-- Indent case labels one level deeper than the switch header -->
    <setting id="org.eclipse.jdt.core.formatter.indent_switchstatements_compare_to_switch" value="true"/>
    <!-- Indent statements inside each case relative to the case label -->
    <setting id="org.eclipse.jdt.core.formatter.indent_switchstatements_compare_to_cases" value="true"/>
    <!-- Do not compact empty switch statements (keep structure readable) -->
    <setting id="org.eclipse.jdt.core.formatter.compact_else_if" value="true"/>

    <!-- Disable all comment reformatting to preserve manual layout -->
    <setting id="org.eclipse.jdt.core.formatter.comment.format_block_comments" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.comment.format_line_comments" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.comment.format_javadoc_comments" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.comment.format_header" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.comment.format_html" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.comment.format_source" value="false"/>
    <!-- Keep blank lines and spacing inside comments -->
    <setting id="org.eclipse.jdt.core.formatter.comment.clear_blank_lines_in_block_comment" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.comment.new_lines_at_block_boundaries" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.comment.remove_blank_lines" value="false"/>
    <!-- Large line length so comment lines never wrap -->
    <setting id="org.eclipse.jdt.core.formatter.comment.line_length" value="500"/>
  </profile>
</profiles>
